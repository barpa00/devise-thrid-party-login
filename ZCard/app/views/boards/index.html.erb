<h1>看板列表</h1>

<button><%= link_to "新增看板", new_board_path %></button>

<ul>
<% @boards.each do |board| %>
    <li>
        <%= link_to "編輯", edit_board_path(board.id) %>
        <%= link_to "刪除", board_path(board.id), method: 'delete', data: {confirm: 'deleted?'} %>
        <%= link_to board.title, board_path(board.id) %>
                                <!-- 可以簡化board -->
    </li>
<% end %>
</ul>
